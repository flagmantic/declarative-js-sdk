{
  "name": "@firstkind/declarative",
  "version": "1.0.0",
  "description": "An SDK to facilitate specifying feature flags declaratively",
  "private": false,
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts --platform=node --bundle --analyze --minify --format=esm --outdir=./dist",
    "types": "rm -f dist/*.d.ts && tsc --emitDeclarationOnly --outDir dist",
    "publish": "npm run build && npm run types"
  },
  "author": "First Kind Software",
  "license": "GPL-3.0",
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.15",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4",
    "esbuild": "^0.14.47"
  }
}
